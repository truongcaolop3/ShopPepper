@model _20T1080020.DomainModels.Category
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">
            @*tránh trường hợp bị face token*@
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CategoryID)
            @*<input type="hidden" name="CategoryID" value="@Model.CategoryID" />*@
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @autofocus = "autoforcus" })

                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color:#f00" })
                    @* <input type="text" value="@Model.CategoryName" name="CategoryName" class="form-control">*@
                </div>
            </div> <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:#f00" })
                    @*<input type="text" value="@Model.Description" name="Description" class="form-control">*@
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-danger">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

