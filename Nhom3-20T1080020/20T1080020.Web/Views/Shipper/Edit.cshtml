@model _20T1080020.DomainModels.Shipper
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">
            @*tránh trường hợp bị face token*@
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ShipperID)
            @*<input type="hidden" name="ShipperID" value="@Model.ShipperID" />*@

            
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autoforcus" })
                    @*<input type="text" value="@Model.SupplierName" name="SupplierName"  class="form-control">*@
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
       

                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Shipper" class="btn btn-danger">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


